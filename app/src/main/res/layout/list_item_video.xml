<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

        <ImageView
            android:id="@+id/iv_video_thumbnail"
            android:layout_width="@dimen/video_thumbnail_local_width"
            android:layout_height="@dimen/video_thumbnail_local_height"
            android:background="@color/orange"
            android:src="@mipmap/music_video_file_100"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/tv_video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textSize="@dimen/video_duration_font_size"
            android:textColor="@color/pure_white"
            android:background="@color/pure_black"
            android:layout_alignBottom="@id/iv_video_thumbnail"
            android:layout_alignRight="@id/iv_video_thumbnail"
            android:layout_alignEnd="@id/iv_video_thumbnail" />

    <TextView
        android:id="@+id/tv_video_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rabbit1.mp4"
        android:textSize="@dimen/video_name_font_size"
        android:textColor="@color/pure_black"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_video_thumbnail"
        android:layout_toEndOf="@+id/iv_video_thumbnail"
        android:layout_marginLeft="@dimen/activity_vertical_margin" />
</RelativeLayout>
