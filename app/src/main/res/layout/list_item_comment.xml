<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >

    <ImageView
        android:id="@+id/iv_comment_user_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/default_image"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/activity_default_margin"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="@dimen/activity_default_margin"
        android:layout_toEndOf="@+id/iv_comment_user_avatar">
        <TextView
            android:id="@+id/tv_comment_user_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xiaoming"
            android:textColor="@color/light_black"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            />
        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-12-12"
            android:textSize="12sp"
            android:paddingLeft="5dp"
            />
        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是一个评论，仅供测试这是一个评论，仅供测试这是一个评论，仅供测试"
            android:textColor="@color/pure_black"
            android:textSize="16sp"
            android:padding="3dp"
            />

    </LinearLayout>


</RelativeLayout>