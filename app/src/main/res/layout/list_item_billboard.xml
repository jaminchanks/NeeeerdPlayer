<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_default_margin"
    android:paddingRight="@dimen/activity_default_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:id="@+id/tv_billboard_number"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="1."
            android:textSize="26sp"
            android:textColor="@color/pure_black"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            />
        <ImageView
            android:id="@+id/iv_billboard_video_thumbnail"
            android:layout_width="96dp"
            android:layout_height="64dp"
            android:src="@mipmap/category_funny_48"
            android:padding="5dp"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <TextView
                android:id="@+id/tv_billboard_video_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="------"
                android:textSize="16sp"
                android:textColor="@color/pure_black"
                />
            <TextView
                android:id="@+id/tv_billboard_video_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="by ---"
                android:textColor="@color/light_black"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>