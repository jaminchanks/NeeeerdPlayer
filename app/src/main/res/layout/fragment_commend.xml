<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- 图片轮播 -->
        <com.jamin.neeeerdplayer.ui.component.AutoSlideBoxView
            android:id="@+id/cycle_view_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.jamin.neeeerdplayer.ui.component.OnlineVideoGridGroup
            android:id="@+id/online_video_group1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_default_margin"
            android:paddingRight="@dimen/activity_default_margin"
            />

        <com.jamin.neeeerdplayer.ui.component.OnlineVideoGridGroup
            android:id="@+id/online_video_group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_default_margin"
            android:paddingRight="@dimen/activity_default_margin"
            />

        <com.jamin.neeeerdplayer.ui.component.OnlineVideoGridGroup
            android:id="@+id/online_video_group3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_default_margin"
            android:paddingRight="@dimen/activity_default_margin"
            />

    </LinearLayout>
</ScrollView>