<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@mipmap/bg_splash2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            >
            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textColor="@color/pure_white"
                android:textSize="36sp"
                android:gravity="center"
                android:layout_marginTop="96dp"
                android:layout_marginBottom="32dp"
                />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        >
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="32dp"
                            android:text="电子邮箱:"
                            android:textSize="18sp"
                            android:textColor="@color/pure_black"
                            />
                        <EditText
                            android:id="@+id/et_register_email"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:background="@null"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:hint="请输入您的邮箱"
                            android:singleLine="true"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_color"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        >
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="32dp"
                            android:text="用户昵称:"
                            android:textSize="18sp"
                            android:textColor="@color/pure_black"
                            android:gravity="center"
                            />
                        <EditText
                            android:id="@+id/et_register_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:background="@null"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:hint="请输入用户昵称"
                            android:singleLine="true"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_color"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        >
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="32dp"
                            android:text="密        码:"
                            android:textSize="18sp"
                            android:textColor="@color/pure_black"
                            android:gravity="center"
                            />
                        <EditText
                            android:id="@+id/et_register_password"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:password="true"
                            android:background="@null"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:hint="请输入密码"
                            android:singleLine="true"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_color"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        >
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="32dp"
                            android:text="重复密码:"
                            android:textColor="@color/pure_black"
                            android:textSize="18sp"
                            />
                        <EditText
                            android:id="@+id/et_register_confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:password="true"
                            android:background="@null"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:hint="请重复输入密码"
                            android:singleLine="true"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>



            <Button
                android:id="@+id/btn_user_register_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_button_blue"
                android:text="注册"
                android:textColor="@color/pure_white"
                android:textSize="20sp"
                />

        </LinearLayout>
    </ScrollView>


<!-- 操作栏 -->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@color/light_light_gray1"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/light_light_gray1"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:fitsSystemWindows="true"
            />
    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>