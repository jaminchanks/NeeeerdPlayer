<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_avatar_dynamic"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/refresh_64"
            />
        <TextView
            android:id="@+id/tv_user_name_dynamic"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:text="xiaoming发布了视频："
            android:textColor="@color/light_black"
            />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_video_thumbnail_dynamic"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_video_name_dynamic"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:text="sample.text"
                android:textSize="16sp"
                android:textColor="@color/pure_black"
                android:paddingLeft="5dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tv_up_time_dynamic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="上传于2000-12-12 12:00:00"
                android:gravity="end"
                />
        </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>